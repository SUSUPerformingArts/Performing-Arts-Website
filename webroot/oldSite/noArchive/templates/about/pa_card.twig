{{ header("SUSU Performing Arts - PA Card") }}
{{ fancySubHeader(0, "PA Card", "Membership and Discounts", "About PA", "/img/icons/pa_card.png") }}



<div class="row">
   <div class="col-md-6">
      <div class="well well-pa lead">
         {{ intro|markdown }}
      </div>
   
   {% set crossover=offers|length /2 %}
   {% set curretOffer=0 %}
   
   {% for offer in offers %}
      
      {% if currentOffer==crossover %}
         </div><div class="col-md-6">
      {% endif %}
      
      {% set currentOffer=currentOffer+1 %}
         
         <div class="well well-pa" style="background-color: {{offer.colour}}">
            <tr>
               <table width="100%"><tr>
                  <td valign="top"><h2 style="font-weight:300">{{offer.where}}</h2></td>
                  <td valign="top"><h2 style="font-weight:400; font-size: 20px; text-align:right">{{offer.offer}}</h2></td>
               </tr></table>
            </tr>
            {% if offer.portrait %}
            <tr>
               <td><table width="100%"><tr>
                  <td valign="top">
                     <p>{{offer.detail}}.</p>
                  </td>
                  
                  <td width="30%">
                     <img src="/img/pa_card/{{ offer.image }}.png" style="width: 100%;" />
                  </td>
               </tr></table>
            </tr>
            {% else %}
            <table width="100%">
               <tr>
                  <td valign="top">
                     <p>{{offer.detail}}.</p>
                  </td>
               </tr>
               <tr>
                  <td style="text-align: right;">
                     <img src="/img/pa_card/{{ offer.image }}.png" style="max-width: 100%; max-height: 60px" />
                  </td>
               </tr>
            </table>
            {% endif %}
         </div>
      
   {% endfor %}
   </div>
</div>

{{ footer() }}