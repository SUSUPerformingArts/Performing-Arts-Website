<script>
$("docuemnt").ready(function() {
	$('#carousel-shows').bind('slid.bs.carousel', function (e) {
		var socType = e.relatedTarget.attributes.socType.nodeValue;
		
		if (socType === "1") $('#carouselContainer').removeClass("music theatrical dance").addClass("theatrical").fadeIn('fast');
		if (socType === "2") $('#carouselContainer').removeClass("music theatrical dance").addClass("music").fadeIn('fast');
		if (socType === "3") $('#carouselContainer').removeClass("music theatrical dance").addClass("dance").fadeIn('fast');
	});
});
</script>
{% endif %}

