{% if carouselImages|length > 0 %}
<main id="carouselContainer" class="container {% if carouselImages.0.socType==1 %} theatrical {% elseif carouselImages.0.socType==2 %} music {% else %} dance {% endif %}">
	<main class="container">
		<div id="after_intro" class="row" style="height:10px"> </div>
		<div id="carousel-shows" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				{% for i in range(0, (carouselImages|length - 1)) %}
					<li data-target="#carousel-shows" data-slide-to="{{ i }}" {% if i==0 %} class="active" {% endif %}></li>
				{% endfor %}
			</ol>
			
			<div class="carousel-inner" role="listbox">
			
			{% for img in carouselImages %}
				{% if img == carouselImages.0 %} <div class="item active" {% else %} <div class="item" {% endif %} socType="{{ img.socType }}" >
				
					<a href="{{urlFor("pa_show_byId", {show: img.id}) }}">
						<img src="/img/archive/shows/{{ img.image }}" title=" {{ img.name }}" alt="{{ img.name }}">
					</a>
				</div>
			{% endfor %}
			
			{% if carouselImages|length > 1 %}
				<a class="left carousel-control" href="#carousel-shows" role="button" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="right carousel-control" href="#carousel-shows" role="button" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			{% endif %}
			
			</div>
		</div>
		<div class="pull-right" style="margin: 10px 0px;">
			<a class="btn btn-pa" href="{{ urlFor("pa_shows") }}">See what's on &raquo;</a>
		</div>
		<div class="clearfix"></div>
	</main>
</main>
