<script>
$(window).load(function () {
	var img = $("#randomSocImg");
	var h = img.height();
	
	if (h > 200) {
		img.css("height", "200px");
		h = 200;
		img.css("width", "auto");
	}
	
	var val = "calc(660px - 4em - " + h + "px)";
	
	$("#randomSocDesc").css("height", val);
});
</script>

